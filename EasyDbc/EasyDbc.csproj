<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net462;net6.0;net8.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Wu Qi</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <OutputType>Library</OutputType>
    <Version>1.0.0</Version>
    <Description>
      EasyDbc is a versatile tool for managing DBC files. It allows you to:

      Quickly generate DBC files
      Merge multiple DBC files
      Parse and analyze DBC files
      Convert Excel files to DBC format
      Generate Excel files from DBC files
      EasyDbc simplifies DBC file workflows, enhancing productivity for automotive communication protocols.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NPOI" Version="2.7.2" />
  </ItemGroup>
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>EasyDbc.Test</_Parameter1>
    </AssemblyAttribute>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>EasyDbc.Benchmark</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
</Project>
